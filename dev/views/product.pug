// Представление для редактирования
.panel-body(ng-controller='editCtrl')
  .jumbotron
    .row
      .text-left.lead.col-lg-8.col-md-8.col-xs-8 {{currentItem.name}}
      .text-right.lead.col-lg-4.col-md-4.col-xs-4 {{currentItem.price | currency}}
    img(src='{{currentItem.image}}')
    div
      h4.text-left Description:
      p.text-left {{currentItem.description}}
  button.btn.btn-success(ng-click='cancelEdit()') Back
